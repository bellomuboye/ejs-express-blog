<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="POST">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input class = "form-control" type="text" name="postTitle" id="postTitle" />
  </div>
  <div class="form-group">
      <label for="postBody">Post</label>
      <textarea name="postBody" id="postBody" cols="30" rows="10" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" name="postSubmit">Publish</button>
</form>
<%- include("partials/footer") -%>
